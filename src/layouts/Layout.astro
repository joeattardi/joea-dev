---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>Joe Attardi</title>
    </head>
    <body
        class="bg-zinc-50 text-zinc-800 dark:bg-zinc-800 dark:text-zinc-100 h-screen grid grid-rows-[auto_1fr_auto]"
    >
        <Header />
        <div class="grid grid-cols-[16px_1fr_16px]">
            <div class="sidebar"></div>
            <main class="max-w-7xl w-full mx-auto p-4">
                <slot />
            </main>
            <div class="sidebar"></div>
        </div>
        <Footer />
    </body>
</html>

<style>
    .sidebar {
        --sidebar-accent: var(--color-zinc-200);

        background: repeating-linear-gradient(45deg, var(--sidebar-accent) 0px, var(--sidebar-accent) 2px, transparent 1px, transparent 5px);
        border-left: 1px solid var(--sidebar-accent);
        border-right: 1px solid var(--sidebar-accent);
    }

    @media (prefers-color-scheme: dark) {
        .sidebar {
            --sidebar-accent: var(--color-zinc-700);
        }
    }
</style>
