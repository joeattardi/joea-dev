---
import { Icon } from "astro-icon/components";

const socialLinks = [
    { name: "GitHub", icon: "fa7-brands:github", href: "https://github.com/joeattardi" },
    { name: "LinkedIn", icon: "fa7-brands:linkedin", href: "https://linkedin.com/in/joeattardi" },
    { name: "X", icon: "fa7-brands:x-twitter", href: "https://x.com/joeattardi" },
    { name: "Email", icon: "ph:envelope", href: "mailto:jattardi@gmail.com" },
];

const siteLinks = [
    { name: "Home", href: "/" },
    { name: "Blog", href: "/blog" },
    { name: "Books", href: "/books" },
    { name: "Projects", href: "/projects" },
];
---

<footer class="bg-zinc-100 border-t border-zinc-200 dark:bg-zinc-800 dark:border-zinc-700">
    <div class="max-w-5xl mx-auto px-6 py-8">
        <div class="flex flex-col md:flex-row md:justify-between gap-6">
            <!-- Sitemap -->
            <nav class="flex flex-wrap gap-x-6 gap-y-2">
                    {siteLinks.map((link) => (
                        <a
                            href={link.href}
                            class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
                        >
                            {link.name}
                        </a>
                    ))}
            </nav>

            <!-- Social Links -->
            <div class="flex gap-4">
                    {socialLinks.map((link) => (
                        <a
                            href={link.href}
                            target={link.href.startsWith("mailto") ? undefined : "_blank"}
                            rel={link.href.startsWith("mailto") ? undefined : "noopener noreferrer"}
                            aria-label={link.name}
                            class="text-zinc-500 dark:text-zinc-400 hover:text-zinc-800 dark:hover:text-zinc-100 transition-all hover:scale-110"
                        >
                            <Icon name={link.icon} class="w-5 h-5" />
                        </a>
                    ))}
            </div>
        </div>

        <!-- Copyright -->
        <div class="mt-8 pt-6 border-t border-zinc-200 dark:border-zinc-700">
            <small class="text-sm text-zinc-500 dark:text-zinc-400">
                &copy; {new Date().getFullYear()} Joe Attardi
            </small>
        </div>
    </div>
</footer>
