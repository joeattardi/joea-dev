---
import { Icon } from 'astro-icon/components';
import BentoBox from '../BentoBox.astro';
---

<BentoBox variant="contact" animationDelay={300} class="col-span-2! md:col-span-2! overflow-hidden flex flex-col bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm">
    <h2 class="text-2xl md:text-3xl font-bold font-serif text-zinc-700 dark:text-zinc-300 px-4 pt-4 mb-2">Tech Stack</h2>
    <div class="flex-1 flex items-center p-4">
    <div class="grid grid-cols-4 grid-rows-2 w-full rounded-lg border border-black/10 dark:border-white/10 overflow-hidden">
        <!-- JavaScript -->
        <div class="group aspect-square flex items-center justify-center bg-yellow-50 dark:bg-zinc-800 border-r border-b border-yellow-100 dark:border-zinc-700 hover:bg-yellow-100 dark:hover:bg-zinc-700 transition-colors cursor-default" title="JavaScript">
            <Icon name="simple-icons:javascript" class="size-8 text-yellow-500 transition-transform duration-300 group-hover:scale-110" />
        </div>
        <!-- TypeScript -->
        <div class="group aspect-square flex items-center justify-center bg-blue-50 dark:bg-zinc-800 border-r border-b border-blue-100 dark:border-zinc-700 hover:bg-blue-100 dark:hover:bg-zinc-700 transition-colors cursor-default" title="TypeScript">
            <Icon name="simple-icons:typescript" class="size-8 text-blue-600 transition-transform duration-300 group-hover:scale-110" />
        </div>
        <!-- React -->
        <div class="group aspect-square flex items-center justify-center bg-cyan-50 dark:bg-zinc-800 border-r border-b border-cyan-100 dark:border-zinc-700 hover:bg-cyan-100 dark:hover:bg-zinc-700 transition-colors cursor-default" title="React">
            <Icon name="simple-icons:react" class="size-8 text-cyan-500 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-180" />
        </div>
        <!-- Node.js -->
        <div class="group aspect-square flex items-center justify-center bg-green-50 dark:bg-zinc-800 border-b border-green-100 dark:border-zinc-700 hover:bg-green-100 dark:hover:bg-zinc-700 transition-colors cursor-default" title="Node.js">
            <Icon name="simple-icons:nodedotjs" class="size-8 text-green-600 transition-transform duration-300 group-hover:scale-110" />
        </div>
        <!-- HTML -->
        <div class="group aspect-square flex items-center justify-center bg-orange-50 dark:bg-zinc-800 border-r border-orange-100 dark:border-zinc-700 hover:bg-orange-100 dark:hover:bg-zinc-700 transition-colors cursor-default" title="HTML">
            <Icon name="simple-icons:html5" class="size-8 text-orange-500 transition-transform duration-300 group-hover:scale-110" />
        </div>
        <!-- CSS -->
        <div class="group aspect-square flex items-center justify-center bg-purple-50 dark:bg-zinc-800 border-r border-purple-100 dark:border-zinc-700 hover:bg-purple-100 dark:hover:bg-zinc-700 transition-colors cursor-default" title="CSS">
            <Icon name="fa7-brands:css" class="size-8 text-[rebeccapurple] transition-transform duration-300 group-hover:scale-110" />
        </div>
        <!-- Tailwind CSS -->
        <div class="group aspect-square flex items-center justify-center bg-sky-50 dark:bg-zinc-800 border-r border-sky-100 dark:border-zinc-700 hover:bg-sky-100 dark:hover:bg-zinc-700 transition-colors cursor-default" title="Tailwind CSS">
            <Icon name="simple-icons:tailwindcss" class="size-8 text-sky-500 transition-transform duration-300 group-hover:scale-110" />
        </div>
        <!-- Java -->
        <div class="group aspect-square flex items-center justify-center bg-red-50 dark:bg-zinc-800 border-red-100 dark:border-zinc-700 hover:bg-red-100 dark:hover:bg-zinc-700 transition-colors cursor-default" title="Java">
            <Icon name="ri:java-fill" class="size-8 text-red-500 transition-transform duration-300 group-hover:scale-110" />
        </div>
    </div>
    </div>
</BentoBox>
