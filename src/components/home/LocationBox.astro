---
import { Icon } from 'astro-icon/components';
import BentoBox from '../BentoBox.astro';
---

<BentoBox variant="cta" animationDelay={250} class="group col-span-2! md:col-span-2! row-span-1! overflow-hidden relative">
    <div id="location-box" class="absolute inset-0 p-6 flex flex-col justify-center md:justify-start">
        <!-- Dynamic sky gradient background -->
        <div class="absolute inset-0 bg-linear-to-b from-sky-400 to-sky-300 dark:from-indigo-950 dark:via-indigo-900 dark:to-indigo-800 transition-all duration-1000"></div>
        <!-- Ambient glow -->
        <div class="absolute -right-8 -bottom-8 w-32 h-32 rounded-full blur-2xl bg-sky-200/50 dark:bg-indigo-500/30 transition-all duration-1000"></div>

        <!-- Sun/Moon icon -->
        <div class="absolute top-2 left-6 md:top-6 transition-all duration-1000">
            <Icon name="ph:sun-fill" class="w-16 h-16 text-yellow-300 drop-shadow-[0_0_12px_rgba(253,224,71,0.6)] dark:hidden" />
            <Icon name="ph:moon-fill" class="w-16 h-16 text-slate-200 drop-shadow-[0_0_12px_rgba(226,232,240,0.6)] hidden dark:block" />
        </div>

        <img src="/boston-skyline.svg" alt="Boston skyline" class="absolute -bottom-8 sm:-bottom-4 right-0 md:right-auto md:left-1/2 md:-translate-x-1/2 h-24 opacity-50 dark:opacity-30 z-0" />

        <p class="absolute inset-0 flex items-center justify-center text-lg font-medium text-white/90 bg-black/30 backdrop-blur-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-20">Born and raised in the Boston area.</p>
    </div>
</BentoBox>


