---
interface Props {
  variant: 'hero' | 'photo' | 'about' | 'tech' | 'contact' | 'cta';
  class?: string;
  animationDelay?: number;
}

const { variant, class: className = '', animationDelay = 0 } = Astro.props;

const variantClasses = {
  hero: 'col-span-2 row-span-2 md:col-span-3',
  photo: 'col-span-2 row-span-2 md:col-span-3',
  about: 'col-span-2 row-span-2 md:col-span-6',
  tech: 'col-span-1 row-span-1 aspect-[3/2]',
  contact: 'col-span-2 row-span-2 md:col-span-3',
  cta: 'col-span-2 row-span-1 md:col-span-3',
};
---

<div
  class={`rounded-xl border border-black/10 dark:border-white/10 min-w-0 opacity-0 animate-fade-in hover:scale-[1.01] hover:-translate-y-0.5 hover:shadow-xl hover:shadow-purple-500/10 dark:hover:shadow-purple-400/10 transition-all duration-300 ease-out ${variantClasses[variant]} ${className}`}
  style={`animation-delay: ${animationDelay}ms;`}
>
  <slot />
</div>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.7s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  }
</style>
