---
import type { Post } from '../../lib/schema';
import PostTags from './PostTags.astro';
import { Icon } from 'astro-icon/components';

interface Props {
    post: Post;
}

const { post } = Astro.props;

const publishedDate = new Date(post.publishedAt).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---
<article>
        <a
        class="rounded-lg p-4 border dark:border-zinc-600 dark:bg-zinc-900 bg-slate-100 border-slate-300 dark:hover:bg-zinc-950 hover:bg-slate-200 grid grid-cols-[auto_1fr] gap-4 h-full"
        href={`/blog/${post.slug}`}
    >
        {post.coverImage?.url ? (
            <img src={post.coverImage.url} class="w-24 h-24 object-cover rounded" />
        ) : (
            <div class="w-24 h-24 flex items-center justify-center">
                <Icon name="ph:article" class="w-16 h-16 dark:text-zinc-400 text-slate-600" />
            </div>
        )}
        <div class="flex flex-col gap-4">
            <h3 class="text-xl">{post.title}</h2>
            <time class="text-xs dark:text-zinc-400 text-slate-600" datetime={post.publishedAt}>{publishedDate}</time>
            <PostTags {post} />
        </div>
    </a>
</article>