---
import type { Post } from '../../lib/schema';

interface Props {
    post: Post
}

const { post } = Astro.props;
---
<ul class="flex items-center gap-2">
    {post.tags.map(tag => (
        <li class="border border-slate-400 text-slate-500 dark:border-slate-400 dark:text-slate-300 rounded px-2 py-1 text-xs uppercase">
           {tag.name} 
        </li>
    ))}
</ul>