---
const { post } = Astro.props;
import { Marked } from 'marked';

// Hashnode sticks align="center" in its images which breaks the
// Markdown rendering. This is a quick fix to remove those.
const fixedMarkdown = post.content.markdown.replace(/(\s+align="(center|left)")\)/g, ')');

const marked = new Marked();
const content = marked.parse(fixedMarkdown);
---

<div
    class:list={[
        'prose dark:prose-invert md:prose-lg max-w-none',
        'prose-pre:overflow-x-auto prose-pre:max-w-full prose-li:m-0 prose-ul:list-disc',
        'prose-h2:font-serif prose-h2:text-2xl prose-h2:md:text-3xl prose-h2:mt-10 prose-h2:mb-4 prose-h2:text-zinc-800 prose-h2:dark:text-zinc-100',
        'prose-h3:font-serif prose-h3:text-xl prose-h3:md:text-2xl prose-h3:mt-8 prose-h3:mb-3',
        'prose-h4:font-serif prose-h4:text-lg prose-h4:md:text-xl prose-h4:mt-6 prose-h4:mb-2',
        'prose-p:text-zinc-700 prose-p:dark:text-zinc-300 prose-p:leading-relaxed',
        'prose-a:text-purple-600 prose-a:dark:text-purple-400 prose-a:no-underline prose-a:border-b prose-a:border-purple-300 prose-a:dark:border-purple-700 prose-a:hover:border-purple-500 prose-a:dark:hover:border-purple-400 prose-a:transition-colors',
        'prose-blockquote:border-l-4 prose-blockquote:border-purple-400 prose-blockquote:dark:border-purple-600 prose-blockquote:bg-purple-50 prose-blockquote:dark:bg-purple-900/20 prose-blockquote:py-1 prose-blockquote:px-4 prose-blockquote:rounded-r-lg prose-blockquote:italic',
        'prose-code:text-purple-600 prose-code:dark:text-purple-400 prose-code:bg-purple-50 prose-code:dark:bg-purple-900/30 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:font-normal',
        'prose-img:rounded-xl prose-img:shadow-lg prose-img:border prose-img:border-black/10 prose-img:dark:border-white/10',
        'prose-strong:text-zinc-900 prose-strong:dark:text-zinc-100'
    ]}
    set:html={content}
/>
