---
const { post } = Astro.props;
---

<div class="relative max-w-2xl mx-auto">
    {post.coverImage?.url && <img class="w-full rounded-lg" src={post.coverImage.url} />}
    {
        post.coverImage?.photographer && (
            <small class="bg-zinc-300 text-zinc-800 px-2 py-1 rounded absolute right-4 bottom-2 shadow">
                Image: <a href={post.coverImage.attribution}>{post.coverImage.photographer}</a>
            </small>
        )
    }
</div>
