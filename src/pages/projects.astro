---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';
import BentoBox from '../components/BentoBox.astro';

import aiVoiceImg from '../assets/projects/BuildinganAIVoiceAssistant.png';
import webApiImg from '../assets/projects/web-api-demos.png';
import urlScrubImg from '../assets/projects/url-scrub.png';
import jsonColorizerImg from '../assets/projects/json-colorizer.png';
import picmoImg from '../assets/projects/picmo.png';
import svelteToastImg from '../assets/projects/svelte-toast.png';

const projects = [
    {
        title: 'Building an AI Voice Assistant',
        description: 'A learning project series on building a voice assistant using the Web Speech API and the OpenAI API.',
        link: 'https://shortener.manning.com/pZOG',
        technologies: ['AI', 'JavaScript', 'Svelte'],
        publisher: 'Manning Publications',
        icon: 'ph:microphone-duotone',
        gradient: 'from-violet-500 to-purple-600',
        bgColor: 'bg-violet-50 dark:bg-violet-950/30',
        borderColor: 'border-violet-200 dark:border-violet-800',
        image: aiVoiceImg,
        featured: true
    },
    {
        title: 'Web API Demos',
        description: 'A collection of demos and sample code from my book, Web API Cookbook. Covers web animations, speech recognition, DOM observers, and more.',
        link: 'https://webapis.info',
        technologies: ['HTML', 'JavaScript'],
        icon: 'ph:code-duotone',
        gradient: 'from-blue-500 to-cyan-500',
        bgColor: 'bg-blue-50 dark:bg-blue-950/30',
        borderColor: 'border-blue-200 dark:border-blue-800',
        image: webApiImg,
        featured: true
    },
    {
        title: 'URL Scrub',
        description: 'A tool for building and cleaning URLs. Use the visual URL builder, or paste in a URL and automatically remove tracking parameters to protect your privacy.',
        link: 'https://urlscrub.com',
        technologies: ['JavaScript', 'React'],
        icon: 'ph:link-duotone',
        gradient: 'from-emerald-500 to-teal-500',
        bgColor: 'bg-emerald-50 dark:bg-emerald-950/30',
        borderColor: 'border-emerald-200 dark:border-emerald-800',
        image: urlScrubImg,
        featured: true
    },
    {
        title: 'JSON Colorizer',
        description: 'An npm package to pretty-print JSON data with syntax highlighting.',
        link: 'https://www.npmjs.com/package/json-colorizer',
        technologies: ['TypeScript'],
        icon: 'ph:brackets-curly-duotone',
        gradient: 'from-amber-500 to-orange-500',
        bgColor: 'bg-amber-50 dark:bg-amber-950/30',
        borderColor: 'border-amber-200 dark:border-amber-800',
        image: jsonColorizerImg
    },
    {
        title: 'Promise Poller',
        description: 'An npm package that provides a Promise based interface for performing polling operations.',
        link: 'https://www.npmjs.com/package/promise-poller',
        technologies: ['JavaScript'],
        icon: 'ph:arrows-clockwise-duotone',
        gradient: 'from-pink-500 to-rose-500',
        bgColor: 'bg-pink-50 dark:bg-pink-950/30',
        borderColor: 'border-pink-200 dark:border-pink-800'
    },
    {
        title: 'PicMo',
        description: 'A vanilla JavaScript emoji picker component. No longer maintained.',
        link: 'https://npmjs.com/package/picmo',
        technologies: ['JavaScript'],
        icon: 'ph:smiley-duotone',
        gradient: 'from-yellow-400 to-amber-500',
        bgColor: 'bg-yellow-50 dark:bg-yellow-950/30',
        borderColor: 'border-yellow-200 dark:border-yellow-800',
        image: picmoImg,
        archived: true
    },
    {
        title: 'Build a Toast Notification System With Svelte',
        description: 'A guided project series on building a basic toast notification system in a Svelte application.',
        link: 'https://www.educative.io/projects/build-a-toast-notification-system-with-svelte',
        technologies: ['JavaScript', 'Svelte'],
        publisher: 'Educative',
        icon: 'ph:bell-ringing-duotone',
        gradient: 'from-indigo-500 to-blue-600',
        bgColor: 'bg-indigo-50 dark:bg-indigo-950/30',
        borderColor: 'border-indigo-200 dark:border-indigo-800',
        image: svelteToastImg
    }
];

const featuredProjects = projects.filter(p => p.featured);
const otherProjects = projects.filter(p => !p.featured);
---

<Layout title="Projects">
    <!-- Background Pattern & Decorative Elements -->
    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
        <!-- Dot pattern -->
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgba(0,0,0,0.07)_1px,transparent_0)] dark:bg-[radial-gradient(circle_at_1px_1px,rgba(255,255,255,0.05)_1px,transparent_0)] bg-size-[24px_24px]"></div>

        <!-- Floating gradient blobs -->
        <div class="absolute top-20 -left-32 w-96 h-96 bg-linear-to-br from-emerald-400/20 to-cyan-500/20 dark:from-emerald-500/10 dark:to-cyan-600/10 rounded-full blur-3xl animate-[float_12s_ease-in-out_infinite]"></div>
        <div class="absolute top-1/2 -right-32 w-80 h-80 bg-linear-to-br from-violet-400/20 to-purple-400/20 dark:from-violet-500/10 dark:to-purple-500/10 rounded-full blur-3xl animate-[float-delayed_15s_ease-in-out_infinite]"></div>
        <div class="absolute -bottom-20 left-1/3 w-72 h-72 bg-linear-to-br from-amber-400/15 to-orange-400/15 dark:from-amber-500/10 dark:to-orange-500/10 rounded-full blur-3xl animate-[float_18s_ease-in-out_infinite]"></div>
    </div>

    <!-- Main Content -->
    <div class="relative">
        <!-- Page Header -->
        <BentoBox variant="about" animationDelay={0} class="col-span-2! md:col-span-6! bg-linear-to-br from-emerald-500 via-teal-500 to-cyan-500 dark:from-emerald-600 dark:via-teal-600 dark:to-cyan-600 bg-size-[200%_200%] animate-[gradient-shift_8s_ease-in-out_infinite] text-white p-8 md:p-12 mb-4">
            <h1 class="text-4xl md:text-5xl font-bold font-serif mb-4">Projects</h1>
            <p class="text-lg md:text-xl opacity-90 max-w-2xl">
                A collection of open source libraries, tools, and educational content I've built over the years.
            </p>
        </BentoBox>

        <!-- Featured Projects Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
            {featuredProjects.map((project, index) => (
                <a
                    href={project.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group block"
                >
                    <BentoBox
                        variant="contact"
                        animationDelay={100 + index * 100}
                        class={`col-span-1! h-full ${project.bgColor} backdrop-blur-sm overflow-hidden ${project.borderColor} hover:border-opacity-60`}
                    >
                        <!-- Project Image -->
                        {project.image && (
                            <div class="relative overflow-hidden">
                                <Image
                                    src={project.image}
                                    alt={project.title}
                                    class="w-full h-40 object-cover object-top transition-transform duration-500 group-hover:scale-105"
                                />
                                <div class={`absolute inset-0 bg-linear-to-t from-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300`}></div>
                            </div>
                        )}

                        <div class="p-6">
                            <!-- Icon & Title -->
                            <div class="flex items-start gap-4 mb-4">
                                <div class={`p-3 rounded-xl bg-linear-to-br ${project.gradient} shadow-lg shrink-0`}>
                                    <Icon name={project.icon} class="w-6 h-6 text-white" />
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h3 class="text-lg font-bold font-serif mb-1">
                                        {project.title}
                                    </h3>
                                    {project.publisher && (
                                        <span class="text-xs font-medium text-zinc-500 dark:text-zinc-400">
                                            {project.publisher}
                                        </span>
                                    )}
                                </div>
                                <Icon name="ph:arrow-up-right" class="w-5 h-5 text-zinc-400 opacity-0 group-hover:opacity-100 transition-opacity shrink-0" />
                            </div>

                            <!-- Description -->
                            <p class="text-sm text-zinc-600 dark:text-zinc-300 mb-4 line-clamp-3">
                                {project.description}
                            </p>

                            <!-- Technologies -->
                            <div class="flex flex-wrap gap-2">
                                {project.technologies.map(tech => (
                                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-black/5 dark:bg-white/10 text-zinc-600 dark:text-zinc-300">
                                        {tech}
                                    </span>
                                ))}
                            </div>
                        </div>
                    </BentoBox>
                </a>
            ))}
        </div>

        <!-- Other Projects - Horizontal Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:auto-rows-fr">
            {otherProjects.map((project, index) => (
                <a
                    href={project.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group block h-full"
                >
                    <BentoBox
                        variant="tech"
                        animationDelay={400 + index * 100}
                        class={`col-span-1! aspect-auto! h-full ${project.bgColor} backdrop-blur-sm overflow-hidden ${project.borderColor} hover:border-opacity-60`}
                    >
                        <div class="flex h-full min-h-32">
                            <!-- Left: Image or Gradient -->
                            <div class="relative w-28 sm:w-36 shrink-0 overflow-hidden">
                                {project.image ? (
                                    <Image
                                        src={project.image}
                                        alt={project.title}
                                        class="w-full h-full object-cover object-top transition-transform duration-500 group-hover:scale-105"
                                    />
                                ) : (
                                    <div class={`w-full h-full bg-linear-to-br ${project.gradient} flex items-center justify-center`}>
                                        <Icon name={project.icon} class="w-10 h-10 text-white/30" />
                                    </div>
                                )}
                            </div>

                            <!-- Right: Content -->
                            <div class="flex-1 p-4 flex flex-col justify-center min-w-0">
                                <div class="flex items-start justify-between gap-2 mb-2">
                                    <div class="flex items-center gap-2 min-w-0">
                                        <div class={`p-1.5 rounded-lg bg-linear-to-br ${project.gradient} shadow-sm shrink-0`}>
                                            <Icon name={project.icon} class="w-4 h-4 text-white" />
                                        </div>
                                        <h3 class="text-sm sm:text-base font-bold font-serif truncate">
                                            {project.title}
                                        </h3>
                                    </div>
                                    <div class="flex items-center gap-1.5 shrink-0">
                                        {project.archived && (
                                            <span class="px-1.5 py-0.5 text-[9px] font-medium rounded-full bg-zinc-200 dark:bg-zinc-700 text-zinc-500 dark:text-zinc-400">
                                                Archived
                                            </span>
                                        )}
                                        <Icon name="ph:arrow-up-right" class="w-4 h-4 text-zinc-400 opacity-0 group-hover:opacity-100 transition-opacity" />
                                    </div>
                                </div>

                                {project.publisher && (
                                    <span class="text-[10px] font-medium text-zinc-500 dark:text-zinc-400 mb-1">
                                        {project.publisher}
                                    </span>
                                )}

                                <p class="text-xs text-zinc-600 dark:text-zinc-400 line-clamp-2 mb-2">
                                    {project.description}
                                </p>

                                <div class="flex flex-wrap gap-1">
                                    {project.technologies.map(tech => (
                                        <span class="px-1.5 py-0.5 text-[10px] font-medium rounded-full bg-black/5 dark:bg-white/10 text-zinc-500 dark:text-zinc-400">
                                            {tech}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        </div>
                    </BentoBox>
                </a>
            ))}
        </div>
    </div>
</Layout>
