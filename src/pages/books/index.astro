---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import Layout from '../../layouts/Layout.astro';
import PageTitle from '../../components/PageTitle.astro';
import modernCssCover from '../../assets/books/modern-css.jpg';
import webApiCookbookCover from '../../assets/books/web-api-cookbook.jpg';

const books = [
    {
        title: 'Modern CSS',
        slug: 'modern-css',
        publisher: 'Apress',
        year: 2025,
        coverImage: modernCssCover,
        description: 'Master the latest CSS features and techniques to build beautiful, responsive, and maintainable web designs.',
        color: {
            bg: 'from-purple-500/10 to-pink-500/10',
            border: 'hover:border-purple-400/50',
            accent: 'from-purple-500 to-pink-500',
            tag: 'bg-purple-100 text-purple-700 dark:bg-purple-900/50 dark:text-purple-300',
            icon: 'text-purple-500'
        }
    },
    {
        title: 'Web API Cookbook',
        slug: 'web-api-cookbook',
        publisher: "O'Reilly",
        year: 2024,
        coverImage: webApiCookbookCover,
        description: 'Practical recipes for working with modern browser APIs to build powerful web applications.',
        color: {
            bg: 'from-blue-500/10 to-cyan-500/10',
            border: 'hover:border-blue-400/50',
            accent: 'from-blue-500 to-cyan-500',
            tag: 'bg-blue-100 text-blue-700 dark:bg-blue-900/50 dark:text-blue-300',
            icon: 'text-blue-500'
        }
    }
];
---

<Layout title="Books">
    <!-- Background Pattern & Decorative Elements -->
    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
        <!-- Dot pattern -->
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgba(0,0,0,0.07)_1px,transparent_0)] dark:bg-[radial-gradient(circle_at_1px_1px,rgba(255,255,255,0.05)_1px,transparent_0)] bg-size-[24px_24px]"></div>

        <!-- Floating gradient blobs -->
        <div class="absolute top-20 -left-32 w-96 h-96 bg-linear-to-br from-blue-400/20 to-purple-500/20 dark:from-blue-500/10 dark:to-purple-600/10 rounded-full blur-3xl animate-[float_12s_ease-in-out_infinite]"></div>
        <div class="absolute top-1/2 -right-32 w-80 h-80 bg-linear-to-br from-pink-400/20 to-orange-400/20 dark:from-pink-500/10 dark:to-orange-500/10 rounded-full blur-3xl animate-[float-delayed_15s_ease-in-out_infinite]"></div>
        <div class="absolute -bottom-20 left-1/3 w-72 h-72 bg-linear-to-br from-cyan-400/15 to-blue-400/15 dark:from-cyan-500/10 dark:to-blue-500/10 rounded-full blur-3xl animate-[float_18s_ease-in-out_infinite]"></div>
    </div>

    <!-- Page Header -->
    <div class="mb-8 md:mb-12">
        <PageTitle
            title="Books"
            description="Technical books I've authored on modern web development."
        />
    </div>

    <!-- Books Grid -->
    <div class="grid grid-cols-1 gap-8">
        {books.map((book, index) => (
            <a
                href={`/books/${book.slug}`}
                class="group block"
            >
                <div
                    class={`relative h-full rounded-2xl border border-black/10 dark:border-white/10 bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm overflow-hidden opacity-0 animate-fade-in transition-all duration-300 ease-out hover:scale-[1.01] hover:-translate-y-1 hover:shadow-2xl hover:shadow-purple-500/15 dark:hover:shadow-purple-400/15 ${book.color.border}`}
                    style={`animation-delay: ${(index + 1) * 100}ms;`}
                >
                    {/* Gradient accent bar */}
                    <div class={`absolute top-0 left-0 right-0 h-1.5 bg-linear-to-r ${book.color.accent}`}></div>

                    <div class="flex flex-col md:flex-row gap-8 p-8 pt-10 md:p-10 md:pt-12">
                        {/* Book Cover */}
                        <div class="shrink-0 mx-auto md:mx-0">
                            <div class="relative w-48 h-64 md:w-56 md:h-72 rounded-xl overflow-hidden shadow-xl group-hover:shadow-2xl transition-shadow">
                                <div class={`absolute inset-0 bg-linear-to-br ${book.color.bg}`}></div>
                                <Image
                                    src={book.coverImage}
                                    alt={`${book.title} book cover`}
                                    class="relative w-full h-full object-cover"
                                />
                            </div>
                        </div>

                        {/* Book Details */}
                        <div class="flex flex-col grow text-center md:text-left">
                            {/* Publisher & Year */}
                            <div class="flex items-center justify-center md:justify-start gap-2 mb-4">
                                <Icon name="ph:book-open" class={`w-5 h-5 ${book.color.icon}`} />
                                <span class="text-base font-medium text-zinc-600 dark:text-zinc-400">
                                    {book.publisher} &bull; {book.year}
                                </span>
                            </div>

                            {/* Title */}
                            <h2 class="text-3xl md:text-4xl font-bold font-serif mb-4 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
                                {book.title}
                            </h2>

                            {/* Description */}
                            <p class="text-base md:text-lg text-zinc-600 dark:text-zinc-400 mb-6 max-w-xl">
                                {book.description}
                            </p>

                            {/* View Details Link */}
                            <div class="mt-auto pt-6 border-t border-zinc-200 dark:border-zinc-700">
                                <span class="inline-flex items-center gap-2 text-base font-medium text-purple-600 dark:text-purple-400 group-hover:gap-3 transition-all">
                                    View Details
                                    <Icon name="ph:arrow-right" class="w-5 h-5 transition-transform group-hover:translate-x-1" />
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        ))}
    </div>
</Layout>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .animate-fade-in {
        animation: fade-in 0.5s ease-out forwards;
    }
</style>
