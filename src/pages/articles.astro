---
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';
import PageTitle from '../components/PageTitle.astro';
import articlesData from '../data/articles.json';

// Sort articles: featured first, then by date
const articles = [...articlesData].sort((a, b) => {
    if (a.featured && !b.featured) return -1;
    if (!a.featured && b.featured) return 1;
    return new Date(b.publishedDate).getTime() - new Date(a.publishedDate).getTime();
});

function formatDate(dateString: string) {
    return new Date(dateString).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    });
}

// Color themes for cards based on index
const colorThemes = [
    { bg: 'from-blue-500/10 to-purple-500/10', border: 'hover:border-blue-400/50', tag: 'bg-blue-100 text-blue-700 dark:bg-blue-900/50 dark:text-blue-300', icon: 'text-blue-500' },
    { bg: 'from-pink-500/10 to-orange-500/10', border: 'hover:border-pink-400/50', tag: 'bg-pink-100 text-pink-700 dark:bg-pink-900/50 dark:text-pink-300', icon: 'text-pink-500' },
    { bg: 'from-cyan-500/10 to-blue-500/10', border: 'hover:border-cyan-400/50', tag: 'bg-cyan-100 text-cyan-700 dark:bg-cyan-900/50 dark:text-cyan-300', icon: 'text-cyan-500' },
    { bg: 'from-green-500/10 to-teal-500/10', border: 'hover:border-green-400/50', tag: 'bg-green-100 text-green-700 dark:bg-green-900/50 dark:text-green-300', icon: 'text-green-500' },
    { bg: 'from-purple-500/10 to-pink-500/10', border: 'hover:border-purple-400/50', tag: 'bg-purple-100 text-purple-700 dark:bg-purple-900/50 dark:text-purple-300', icon: 'text-purple-500' },
    { bg: 'from-orange-500/10 to-yellow-500/10', border: 'hover:border-orange-400/50', tag: 'bg-orange-100 text-orange-700 dark:bg-orange-900/50 dark:text-orange-300', icon: 'text-orange-500' },
];
---

<Layout title="Articles">
    <!-- Background Pattern & Decorative Elements -->
    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
        <!-- Dot pattern -->
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgba(0,0,0,0.07)_1px,transparent_0)] dark:bg-[radial-gradient(circle_at_1px_1px,rgba(255,255,255,0.05)_1px,transparent_0)] bg-size-[24px_24px]"></div>

        <!-- Floating gradient blobs -->
        <div class="absolute top-20 -left-32 w-96 h-96 bg-linear-to-br from-blue-400/20 to-purple-500/20 dark:from-blue-500/10 dark:to-purple-600/10 rounded-full blur-3xl animate-[float_12s_ease-in-out_infinite]"></div>
        <div class="absolute top-1/2 -right-32 w-80 h-80 bg-linear-to-br from-pink-400/20 to-orange-400/20 dark:from-pink-500/10 dark:to-orange-500/10 rounded-full blur-3xl animate-[float-delayed_15s_ease-in-out_infinite]"></div>
        <div class="absolute -bottom-20 left-1/3 w-72 h-72 bg-linear-to-br from-cyan-400/15 to-blue-400/15 dark:from-cyan-500/10 dark:to-blue-500/10 rounded-full blur-3xl animate-[float_18s_ease-in-out_infinite]"></div>
    </div>

    <!-- Page Header -->
    <div class="mb-8 md:mb-12">
        <PageTitle
            title="Articles"
            description="A collection of articles I've written for various publications across the web."
        />
    </div>

    <!-- Articles Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
        {articles.map((article, index) => {
            const theme = colorThemes[index % colorThemes.length];
            return (
                <a
                    href={article.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="group block"
                >
                    <div
                        class={`relative h-full rounded-xl border border-black/10 dark:border-white/10 bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm overflow-hidden opacity-0 animate-fade-in transition-all duration-300 ease-out hover:scale-[1.02] hover:-translate-y-1 hover:shadow-xl hover:shadow-purple-500/10 dark:hover:shadow-purple-400/10 ${theme.border}`}
                        style={`animation-delay: ${(index + 1) * 100}ms;`}
                    >
                        {/* Gradient accent bar */}
                        <div class={`absolute top-0 left-0 right-0 h-1 bg-linear-to-r ${theme.bg.replace('/10', '')}`}></div>

                        {/* Featured badge */}
                        {article.featured && (
                            <div class="absolute top-3 right-3">
                                <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-700 dark:bg-yellow-900/50 dark:text-yellow-300">
                                    <Icon name="ph:star-fill" class="w-3 h-3" />
                                    Featured
                                </span>
                            </div>
                        )}

                        <div class="p-6 pt-8 h-full flex flex-col">
                            {/* Publication */}
                            <div class="flex items-center gap-2 mb-3">
                                <Icon name="ph:book-open" class={`w-4 h-4 ${theme.icon}`} />
                                <span class="text-sm font-medium text-zinc-600 dark:text-zinc-400">
                                    {article.publication}
                                </span>
                            </div>

                            {/* Title */}
                            <h2 class="text-xl font-bold font-serif mb-3 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors line-clamp-2">
                                {article.title}
                            </h2>

                            {/* Description */}
                            <p class="text-sm text-zinc-600 dark:text-zinc-400 mb-4 line-clamp-3">
                                {article.description}
                            </p>

                            {/* Tags */}
                            <div class="flex flex-wrap gap-2 mb-4">
                                {article.tags.slice(0, 3).map((tag: string) => (
                                    <span class={`px-2 py-1 rounded-md text-xs font-medium ${theme.tag}`}>
                                        {tag}
                                    </span>
                                ))}
                            </div>

                            {/* Footer - pushed to bottom */}
                            <div class="flex items-center justify-between pt-4 border-t border-zinc-200 dark:border-zinc-700 mt-auto">
                                <time class="text-xs text-zinc-500 dark:text-zinc-500" datetime={article.publishedDate}>
                                    {formatDate(article.publishedDate)}
                                </time>
                                <span class="inline-flex items-center gap-1 text-sm font-medium text-purple-600 dark:text-purple-400 group-hover:gap-2 transition-all">
                                    Read
                                    <Icon name="ph:arrow-right" class="w-4 h-4 transition-transform group-hover:translate-x-1" />
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            );
        })}
    </div>

    {/* Empty state */}
    {articles.length === 0 && (
        <div class="text-center py-16">
            <Icon name="ph:newspaper-clipping" class="w-16 h-16 mx-auto text-zinc-300 dark:text-zinc-600 mb-4" />
            <p class="text-zinc-500 dark:text-zinc-400">No articles yet. Check back soon!</p>
        </div>
    )}
</Layout>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.5s ease-out forwards;
    }
</style>
