---
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';
import BentoBox from '../components/BentoBox.astro';

interface UsesItem {
    name: string;
    description: string;
    link?: string;
}

interface UsesCategory {
    title: string;
    icon: string;
    iconColor: string;
    bgColor: string;
    borderColor: string;
    items: UsesItem[];
}

const categories: UsesCategory[] = [
    {
        title: 'Editor + Terminal',
        icon: 'ph:code-bold',
        iconColor: 'text-purple-500',
        bgColor: 'bg-purple-50 dark:bg-purple-950/30',
        borderColor: 'border-purple-200 dark:border-purple-800',
        items: [
            {
                name: 'Visual Studio Code',
                description: 'My go-to editor for everything. Fast, extensible, and has great TypeScript support.',
                link: 'https://code.visualstudio.com/',
            },
            {
                name: 'Dracula Theme',
                description: 'A beautiful dark theme that\'s easy on the eyes during long coding sessions.',
                link: 'https://draculatheme.com/',
            },
            {
                name: 'Monaspace Krypton Font',
                description: 'A monospace font from GitHub. Highly readable and great for coding.',
                link: 'https://github.com/githubnext/monaspace',
            },
            {
                name: 'Warp Terminal',
                description: 'A modern terminal with AI built-in, great autocompletion, and a beautiful UI.',
                link: 'https://www.warp.dev/',
            },
            {
                name: 'GitHub Copilot',
                description: 'AI pair programming that helps me write code faster and learn new patterns.',
                link: 'https://github.com/features/copilot',
            },
            {
                name: 'Claude Code',
                description: 'AI assistant for code generation, refactoring, and documentation.',
                link: 'https://claude.ai/',
            }
        ],
    },
    {
        title: 'Hardware & Desk Setup',
        icon: 'ph:desktop-bold',
        iconColor: 'text-emerald-500',
        bgColor: 'bg-emerald-50 dark:bg-emerald-950/30',
        borderColor: 'border-emerald-200 dark:border-emerald-800',
        items: [
            {
                name: 'MacBook Pro 16" M2 Pro',
                description: '16GB RAM, 1TB SSD',
                link: 'https://www.apple.com/macbook-pro/',
            },
            {
                name: 'LG 27UD68-W 27-Inch 4K UHD IPS Monitor',
                description: 'Crisp text, accurate colors, multiple HDMI and DisplayPort inputs.',
            },
            {
                name: 'Corsair K70 Core TKL RGB Mechanical Keyboard',
                description: 'Wireless mechanical keyboard with MLX Red v2 Switches',
                link: 'https://www.corsair.com/us/en/p/keyboards/ch-911911e-na/k70-core-tkl-rgb-mechanical-gaming-keyboard-ch-911911e-na',
            },
            {
                name: 'Razer Basilisk V3 X HyperSpeed Mouse',
                description: 'Wireless gaming mouse with nice RGB lighting accents.',
                link: 'https://www.razer.com/gaming-mice/razer-basilisk-v3-x-hyperspeed',
            },
            {
                name: 'Secretlab TITAN Evo 2022 Series Chair',
                description: 'Worth every penny for long hours of comfortable sitting.',
                link: 'https://secretlab.co/pages/titan-evo-2022-series',
            },
        ]
    }
];
---

<Layout title="Uses">
    <!-- Background Pattern & Decorative Elements -->
    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
        <!-- Dot pattern -->
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgba(0,0,0,0.07)_1px,transparent_0)] dark:bg-[radial-gradient(circle_at_1px_1px,rgba(255,255,255,0.05)_1px,transparent_0)] bg-size-[24px_24px]"></div>

        <!-- Floating gradient blobs -->
        <div class="absolute top-20 -left-32 w-96 h-96 bg-linear-to-br from-purple-400/20 to-blue-500/20 dark:from-purple-500/10 dark:to-blue-600/10 rounded-full blur-3xl animate-[float_12s_ease-in-out_infinite]"></div>
        <div class="absolute top-1/2 -right-32 w-80 h-80 bg-linear-to-br from-emerald-400/20 to-cyan-400/20 dark:from-emerald-500/10 dark:to-cyan-500/10 rounded-full blur-3xl animate-[float-delayed_15s_ease-in-out_infinite]"></div>
        <div class="absolute -bottom-20 left-1/3 w-72 h-72 bg-linear-to-br from-blue-400/15 to-purple-400/15 dark:from-blue-500/10 dark:to-purple-500/10 rounded-full blur-3xl animate-[float_18s_ease-in-out_infinite]"></div>
    </div>

    <!-- Hero Section -->
    <div class="mb-8">
        <BentoBox variant="about" animationDelay={0} class="bg-linear-to-br from-purple-500 via-blue-500 to-emerald-500 dark:from-purple-600 dark:via-blue-600 dark:to-emerald-600 bg-size-[200%_200%] animate-[gradient-shift_8s_ease-in-out_infinite] text-white p-8 md:p-12">
            <h1 class="text-4xl md:text-5xl font-bold font-serif mb-4">
                What I Use
            </h1>
            <p class="text-lg md:text-xl opacity-90 max-w-2xl">
                A living document of the tools, apps, and hardware that power my daily workflow.
                Inspired by <a href="https://uses.tech" class="underline hover:no-underline">uses.tech</a>.
            </p>
        </BentoBox>
    </div>

    <!-- Categories Grid -->
    <div class="grid gap-6 md:gap-8">
        {categories.map((category, categoryIndex) => (
            <BentoBox
                variant="about"
                animationDelay={(categoryIndex + 1) * 100}
                class={`${category.bgColor} backdrop-blur-sm p-6 md:p-8 ${category.borderColor}`}
            >
                <div class="flex items-center gap-3 mb-6">
                    <div class={`p-2 rounded-lg bg-white/50 dark:bg-zinc-800/50`}>
                        <Icon name={category.icon} class={`w-6 h-6 md:w-8 md:h-8 ${category.iconColor}`} />
                    </div>
                    <h2 class="text-2xl md:text-3xl font-bold font-serif">{category.title}</h2>
                </div>

                <div class="grid gap-4 md:gap-6 md:grid-cols-2">
                    {category.items.map((item) => (
                        <div class="group">
                            {item.link ? (
                                <a
                                    href={item.link}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="block p-4 rounded-lg bg-white/60 dark:bg-zinc-800/60 border border-black/5 dark:border-white/5 hover:bg-white/80 dark:hover:bg-zinc-800/80 hover:border-black/10 dark:hover:border-white/10 transition-all duration-200"
                                >
                                    <div class="flex items-start justify-between gap-2">
                                        <h3 class="font-semibold text-zinc-900 dark:text-zinc-100 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
                                            {item.name}
                                        </h3>
                                        <Icon name="ph:arrow-up-right-bold" class="w-4 h-4 text-zinc-400 group-hover:text-purple-500 transition-colors shrink-0 mt-0.5" />
                                    </div>
                                    <p class="text-sm text-zinc-600 dark:text-zinc-400 mt-1">
                                        {item.description}
                                    </p>
                                </a>
                            ) : (
                                <div class="p-4 rounded-lg bg-white/60 dark:bg-zinc-800/60 border border-black/5 dark:border-white/5">
                                    <h3 class="font-semibold text-zinc-900 dark:text-zinc-100">
                                        {item.name}
                                    </h3>
                                    <p class="text-sm text-zinc-600 dark:text-zinc-400 mt-1">
                                        {item.description}
                                    </p>
                                </div>
                            )}
                        </div>
                    ))}
                </div>
            </BentoBox>
        ))}
    </div>

    <!-- Footer Note -->
    <div class="mt-8 text-center">
        <BentoBox variant="cta" animationDelay={400} class="bg-white/60 dark:bg-zinc-900/60 backdrop-blur-sm p-6">
            <p class="text-zinc-600 dark:text-zinc-400 text-sm">
                This page was last updated in December 2024. I'll keep it fresh as my setup evolves.
            </p>
        </BentoBox>
    </div>
</Layout>
