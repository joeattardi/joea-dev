---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import SocialIconLink from '../components/SocialIconLink.astro';
import Layout from '../layouts/Layout.astro';
import Link from '../components/Link.astro';
import BentoBox from '../components/BentoBox.astro';
import photo from '../assets/joe.jpeg';
import { getAllPosts } from '../lib/client';

const data = await getAllPosts();
const latestPost = data.publication.posts.edges[0]?.node;

const publishedDate = latestPost ? new Date(latestPost.publishedAt).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
}) : '';
---

<Layout>
    <!-- Bento Grid Container -->
    <div class="grid grid-cols-2 md:grid-cols-6 auto-rows-[minmax(80px,auto)] md:auto-rows-[minmax(100px,auto)] gap-3 md:gap-4 w-full overflow-hidden">
        <!-- Main Hero Box -->
        <BentoBox variant="hero" class="bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 dark:from-blue-600 dark:via-purple-600 dark:to-pink-600 text-white p-8 md:p-12">
            <h1 class="text-4xl md:text-6xl font-bold font-serif mb-4">
                Joe Attardi
            </h1>
            <h2 class="text-xl md:text-2xl mb-4 opacity-90">
                Software Engineer | Author
            </h2>
            <p class="text-lg opacity-90 max-w-xl">
                Building beautiful and functional web applications for over 20 years.
                Passionate about front-end development and modern JavaScript frameworks.
            </p>
        </BentoBox>

        <!-- Photo Box -->
        <BentoBox variant="photo" class="bg-white dark:bg-zinc-900 p-6 flex items-center justify-center">
            <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full blur-2xl opacity-30 animate-pulse"></div>
                <Image
                    src={photo}
                    alt="Photo of Joe Attardi"
                    class="relative w-48 h-48 md:w-56 md:h-56 rounded-full border-4 border-white dark:border-zinc-700"
                />
            </div>
        </BentoBox>

        <!-- About Box -->
        <BentoBox variant="about" class="bg-white dark:bg-zinc-900 p-8">
            <h2 class="text-2xl md:text-3xl font-bold font-serif mb-4">About Me</h2>
            <p class="text-base text-zinc-700 dark:text-zinc-300 mb-3">
                For more than 20 years, I've had a passion for building
                beautiful and functional web applications. I specialize in front-end development
                with a focus on modern JavaScript frameworks.
            </p>
            <p class="text-base text-zinc-700 dark:text-zinc-300">
                I've also written books about <Link href="https://moderncss.cc">CSS</Link> and <Link href="https://webapis.info">the modern web platform</Link>.
            </p>
        </BentoBox>

        <!-- Tech Stack Container -->
        <BentoBox variant="contact" class="col-span-2! md:col-span-6! bg-white dark:bg-zinc-900 p-6 md:p-8">
            <h2 class="text-2xl md:text-3xl font-bold font-serif mb-6">My Tech Stack</h2>
            <div class="grid grid-cols-3 md:grid-cols-6 gap-3 md:gap-4">
                <!-- JavaScript Box -->
                <BentoBox variant="tech" class="bg-yellow-50 dark:bg-zinc-900 p-3 border-yellow-200 dark:border-yellow-900 hover:border-yellow-400 dark:hover:border-yellow-600 transition-colors flex items-center justify-center">
                    <Icon name="simple-icons:javascript" class="w-8 h-8 md:w-10 md:h-10 text-yellow-400" />
                </BentoBox>

                <!-- TypeScript Box -->
                <BentoBox variant="tech" class="bg-blue-50 dark:bg-zinc-900 p-3 border-blue-200 dark:border-blue-900 hover:border-blue-400 dark:hover:border-blue-600 transition-colors flex items-center justify-center">
                    <Icon name="simple-icons:typescript" class="w-8 h-8 md:w-10 md:h-10 text-blue-600" />
                </BentoBox>

                <!-- React Box -->
                <BentoBox variant="tech" class="bg-cyan-50 dark:bg-zinc-900 p-3 border-cyan-200 dark:border-cyan-900 hover:border-cyan-400 dark:hover:border-cyan-600 transition-colors flex items-center justify-center">
                    <Icon name="simple-icons:react" class="w-8 h-8 md:w-10 md:h-10 text-cyan-400" />
                </BentoBox>

                <!-- Node.js Box -->
                <BentoBox variant="tech" class="bg-green-50 dark:bg-zinc-900 p-3 border-green-200 dark:border-green-900 hover:border-green-400 dark:hover:border-green-600 transition-colors flex items-center justify-center">
                    <Icon name="simple-icons:nodedotjs" class="w-8 h-8 md:w-10 md:h-10 text-green-600" />
                </BentoBox>

                <!-- HTML Box -->
                <BentoBox variant="tech" class="bg-orange-50 dark:bg-zinc-900 p-3 border-orange-200 dark:border-orange-900 hover:border-orange-400 dark:hover:border-orange-600 transition-colors flex items-center justify-center">
                    <Icon name="simple-icons:html5" class="w-8 h-8 md:w-10 md:h-10 text-orange-500" />
                </BentoBox>

                <!-- CSS Box -->
                <BentoBox variant="tech" class="bg-purple-50 dark:bg-zinc-900 p-3 border-purple-200 dark:border-purple-900 hover:border-purple-400 dark:hover:border-purple-600 transition-colors flex items-center justify-center">
                    <Icon name="simple-icons:css3" class="w-8 h-8 md:w-10 md:h-10 text-blue-500" />
                </BentoBox>
            </div>
        </BentoBox>

        <!-- Latest Blog Post Box -->
        {latestPost && (
            <BentoBox variant="contact" class="bg-white dark:bg-zinc-900 overflow-hidden">
                <a href={`/blog/${latestPost.slug}`} class="block h-full hover:opacity-90 transition-opacity">
                    <img
                        src={latestPost.coverImage.url}
                        alt={latestPost.title}
                        class="w-full h-32 md:h-40 object-cover"
                    />
                    <div class="p-6">
                        <div class="text-xs text-purple-600 dark:text-purple-400 font-medium mb-2">LATEST POST</div>
                        <h3 class="text-lg md:text-xl font-bold font-serif mb-2 line-clamp-2">{latestPost.title}</h3>
                        <p class="text-sm text-zinc-600 dark:text-zinc-400 line-clamp-2 mb-3">{latestPost.brief}</p>
                        <time class="text-xs text-zinc-500 dark:text-zinc-500" datetime={latestPost.publishedAt}>
                            {publishedDate}
                        </time>
                    </div>
                </a>
            </BentoBox>
        )}

        <!-- Contact Box -->
        <BentoBox variant="contact" class="bg-gradient-to-br from-blue-50 to-purple-50 dark:from-zinc-900 dark:to-zinc-900 p-8">
            <h2 class="text-2xl md:text-3xl font-bold font-serif mb-4">Let's Connect</h2>
            <p class="text-base text-zinc-700 dark:text-zinc-300 mb-6">
                I'd love to hear from you! Whether you have a question, want to collaborate, or just want to say hi.
            </p>
            <div class="flex flex-wrap gap-4">
                <SocialIconLink title="Email" href="mailto:jattardi@gmail.com" icon="ph:envelope" />
                <SocialIconLink title="X" href="https://x.com/joeattardi" icon="fa7-brands:x-twitter" />
                <SocialIconLink title="GitHub" href="https://github.com/joeattardi" icon="fa7-brands:github" />
                <SocialIconLink title="LinkedIn" href="https://linkedin.com/in/joeattardi" icon="fa7-brands:linkedin" />
            </div>
        </BentoBox>
    </div>
</Layout>
