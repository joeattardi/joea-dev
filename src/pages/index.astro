---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';
import Link from '../components/Link.astro';
import BentoBox from '../components/BentoBox.astro';
import photo from '../assets/joe.jpeg';
import { getAllPosts } from '../lib/client';

const data = await getAllPosts();
const latestPost = data.publication.posts.edges[0]?.node;

const publishedDate = latestPost ? new Date(latestPost.publishedAt).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
}) : '';

---

<Layout>
    <!-- Background Pattern & Decorative Elements -->
    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
        <!-- Dot pattern -->
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgba(0,0,0,0.07)_1px,transparent_0)] dark:bg-[radial-gradient(circle_at_1px_1px,rgba(255,255,255,0.05)_1px,transparent_0)] bg-size-[24px_24px]"></div>

        <!-- Floating gradient blobs -->
        <div class="absolute top-20 -left-32 w-96 h-96 bg-linear-to-br from-blue-400/20 to-purple-500/20 dark:from-blue-500/10 dark:to-purple-600/10 rounded-full blur-3xl animate-[float_12s_ease-in-out_infinite]"></div>
        <div class="absolute top-1/2 -right-32 w-80 h-80 bg-linear-to-br from-pink-400/20 to-orange-400/20 dark:from-pink-500/10 dark:to-orange-500/10 rounded-full blur-3xl animate-[float-delayed_15s_ease-in-out_infinite]"></div>
        <div class="absolute -bottom-20 left-1/3 w-72 h-72 bg-linear-to-br from-cyan-400/15 to-blue-400/15 dark:from-cyan-500/10 dark:to-blue-500/10 rounded-full blur-3xl animate-[float_18s_ease-in-out_infinite]"></div>
    </div>

    <!-- Bento Grid Container -->
    <div class="relative grid grid-cols-2 md:grid-cols-6 auto-rows-[minmax(80px,auto)] md:auto-rows-[minmax(100px,auto)] gap-3 md:gap-4 w-full">
        <!-- Main Hero Box -->
        <BentoBox variant="hero" animationDelay={0} class="bg-linear-to-br from-blue-500 via-purple-500 to-pink-500 dark:from-blue-600 dark:via-purple-600 dark:to-pink-600 bg-size-[200%_200%] animate-[gradient-shift_8s_ease-in-out_infinite] text-white p-8 md:p-12 overflow-hidden relative">
            <h1 class="text-4xl md:text-6xl font-bold font-serif mb-4">
                Joe Attardi
            </h1>
            <h2 class="text-xl md:text-2xl mb-4 opacity-90">
                Software Engineer | Author
            </h2>
            <p class="text-lg opacity-90 max-w-xl">
                Building beautiful and functional web applications for over 20 years.
                Passionate about front-end development and modern JavaScript frameworks.
            </p>
        </BentoBox>

        <!-- Photo Box -->
        <BentoBox variant="photo" animationDelay={100} class="bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm p-6 flex items-center justify-center">
            <div class="relative">
                <div class="absolute -inset-4 bg-linear-to-r from-blue-500 via-purple-500 to-pink-500 rounded-full blur-2xl animate-[glow-pulse_4s_ease-in-out_infinite]"></div>
                <Image
                    src={photo}
                    alt="Photo of Joe Attardi"
                    class="relative w-48 h-48 md:w-56 md:h-56 rounded-full border-4 border-white dark:border-zinc-700 shadow-2xl"
                />
            </div>
        </BentoBox>

        <!-- About Box -->
        <BentoBox variant="about" animationDelay={200} class="bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm p-8">
            <h2 class="text-2xl md:text-3xl font-bold font-serif mb-4">About Me</h2>
            <p class="text-base text-zinc-700 dark:text-zinc-300 mb-3">
                For more than 20 years, I've had a passion for building
                beautiful and functional web applications. I specialize in front-end development
                with a focus on modern JavaScript frameworks.
            </p>
            <p class="text-base text-zinc-700 dark:text-zinc-300">
                I've also written books about <Link href="https://moderncss.cc">CSS</Link> and <Link href="https://webapis.info">the modern web platform</Link>.
            </p>
        </BentoBox>

        <!-- Tech Stack Container -->
        <BentoBox variant="contact" animationDelay={300} class="col-span-2! md:col-span-6! bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm p-6 md:p-8">
            <h2 class="text-2xl md:text-3xl font-bold font-serif mb-6">My Tech Stack</h2>
            <div class="grid grid-cols-3 md:grid-cols-6 gap-x-3 gap-y-8 md:gap-x-4 md:gap-y-4">
                <!-- JavaScript Box -->
                <div class="group relative">
                    <BentoBox variant="tech" class="bg-yellow-50 dark:bg-zinc-900 p-3 border-yellow-200 dark:border-yellow-900 hover:border-yellow-400 dark:hover:border-yellow-600 transition-all flex items-center justify-center hover:bg-yellow-100 dark:hover:bg-zinc-800">
                        <Icon name="simple-icons:javascript" class="w-8 h-8 md:w-10 md:h-10 text-yellow-400 transition-transform duration-300 group-hover:scale-110" />
                    </BentoBox>
                    <span class="absolute -bottom-5 left-0 right-0 text-center text-xs font-medium text-yellow-600 dark:text-yellow-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">JavaScript</span>
                </div>

                <!-- TypeScript Box -->
                <div class="group relative">
                    <BentoBox variant="tech" class="bg-blue-50 dark:bg-zinc-900 p-3 border-blue-200 dark:border-blue-900 hover:border-blue-400 dark:hover:border-blue-600 transition-all flex items-center justify-center hover:bg-blue-100 dark:hover:bg-zinc-800">
                        <Icon name="simple-icons:typescript" class="w-8 h-8 md:w-10 md:h-10 text-blue-600 transition-transform duration-300 group-hover:scale-110" />
                    </BentoBox>
                    <span class="absolute -bottom-5 left-0 right-0 text-center text-xs font-medium text-blue-600 dark:text-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">TypeScript</span>
                </div>

                <!-- React Box -->
                <div class="group relative">
                    <BentoBox variant="tech" class="bg-cyan-50 dark:bg-zinc-900 p-3 border-cyan-200 dark:border-cyan-900 hover:border-cyan-400 dark:hover:border-cyan-600 transition-all flex items-center justify-center hover:bg-cyan-100 dark:hover:bg-zinc-800">
                        <Icon name="simple-icons:react" class="w-8 h-8 md:w-10 md:h-10 text-cyan-400 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-180" />
                    </BentoBox>
                    <span class="absolute -bottom-5 left-0 right-0 text-center text-xs font-medium text-cyan-600 dark:text-cyan-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">React</span>
                </div>

                <!-- Node.js Box -->
                <div class="group relative">
                    <BentoBox variant="tech" class="bg-green-50 dark:bg-zinc-900 p-3 border-green-200 dark:border-green-900 hover:border-green-400 dark:hover:border-green-600 transition-all flex items-center justify-center hover:bg-green-100 dark:hover:bg-zinc-800">
                        <Icon name="simple-icons:nodedotjs" class="w-8 h-8 md:w-10 md:h-10 text-green-600 transition-transform duration-300 group-hover:scale-110" />
                    </BentoBox>
                    <span class="absolute -bottom-5 left-0 right-0 text-center text-xs font-medium text-green-600 dark:text-green-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">Node.js</span>
                </div>

                <!-- HTML Box -->
                <div class="group relative">
                    <BentoBox variant="tech" class="bg-orange-50 dark:bg-zinc-900 p-3 border-orange-200 dark:border-orange-900 hover:border-orange-400 dark:hover:border-orange-600 transition-all flex items-center justify-center hover:bg-orange-100 dark:hover:bg-zinc-800">
                        <Icon name="simple-icons:html5" class="w-8 h-8 md:w-10 md:h-10 text-orange-500 transition-transform duration-300 group-hover:scale-110" />
                    </BentoBox>
                    <span class="absolute -bottom-5 left-0 right-0 text-center text-xs font-medium text-orange-600 dark:text-orange-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">HTML</span>
                </div>

                <!-- CSS Box -->
                <div class="group relative">
                    <BentoBox variant="tech" class="bg-purple-50 dark:bg-zinc-900 p-3 border-purple-200 dark:border-purple-900 hover:border-purple-400 dark:hover:border-purple-600 transition-all flex items-center justify-center hover:bg-purple-100 dark:hover:bg-zinc-800">
                        <Icon name="simple-icons:css3" class="w-8 h-8 md:w-10 md:h-10 text-blue-500 transition-transform duration-300 group-hover:scale-110" />
                    </BentoBox>
                    <span class="absolute -bottom-5 left-0 right-0 text-center text-xs font-medium text-blue-600 dark:text-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">CSS</span>
                </div>
            </div>
        </BentoBox>

        <!-- Latest Blog Post Box -->
        {latestPost && (
            <BentoBox variant="contact" animationDelay={400} class="col-span-2! md:col-span-3! bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm overflow-hidden">
                <a href={`/blog/${latestPost.slug}`} class="block h-full hover:opacity-90 transition-opacity">
                    <div class="relative">
                        <img
                            src={latestPost.coverImage.url}
                            alt={latestPost.title}
                            class="w-full h-32 md:h-40 object-cover"
                        />
                        <div class="absolute top-0 left-0 right-0 p-6 bg-linear-to-b from-black/70 to-transparent">
                            <h2 class="text-2xl md:text-3xl font-bold font-serif text-white drop-shadow-lg">From the Blog</h2>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-lg md:text-xl font-bold font-serif mb-2 line-clamp-2">{latestPost.title}</h3>
                        <p class="text-sm text-zinc-600 dark:text-zinc-400 line-clamp-2 mb-3">{latestPost.brief}</p>
                        <time class="text-xs text-zinc-500 dark:text-zinc-500" datetime={latestPost.publishedAt}>
                            {publishedDate}
                        </time>
                    </div>
                </a>
            </BentoBox>
        )}

        <!-- Contact Box -->
        <BentoBox variant="contact" animationDelay={500} class="col-span-2! md:col-span-3! bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm p-6 md:p-8">
            <h2 class="text-2xl md:text-3xl font-bold font-serif mb-4">Let's Connect</h2>
            <p class="text-base text-zinc-700 dark:text-zinc-300 mb-6">
                I'd love to hear from you! Whether you have a question, want to collaborate, or just want to say hi.
            </p>
            <div class="grid grid-cols-4 md:grid-cols-2 lg:grid-cols-4 gap-x-3 gap-y-8 md:gap-x-4 md:gap-y-8">
                <!-- Email Box -->
                <div class="group relative">
                    <a href="mailto:jattardi@gmail.com" title="Email" class="block">
                        <BentoBox variant="tech" class="bg-blue-50 dark:bg-zinc-900 p-3 border-blue-200 dark:border-blue-900 hover:border-blue-400 dark:hover:border-blue-600 transition-all flex items-center justify-center h-full hover:bg-blue-100 dark:hover:bg-zinc-800">
                            <Icon name="ph:envelope" class="w-8 h-8 md:w-10 md:h-10 text-blue-600 dark:text-blue-400 transition-transform duration-300 group-hover:scale-125 group-hover:-rotate-12" />
                        </BentoBox>
                    </a>
                    <span class="absolute -bottom-5 left-0 right-0 text-center text-xs font-medium text-blue-600 dark:text-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">Email</span>
                </div>

                <!-- X Box -->
                <div class="group relative">
                    <a href="https://x.com/joeattardi" title="X" class="block">
                        <BentoBox variant="tech" class="bg-zinc-50 dark:bg-zinc-900 p-3 border-zinc-200 dark:border-zinc-700 hover:border-zinc-400 dark:hover:border-zinc-500 transition-all flex items-center justify-center h-full hover:bg-zinc-100 dark:hover:bg-zinc-800">
                            <Icon name="fa7-brands:x-twitter" class="w-8 h-8 md:w-10 md:h-10 text-zinc-800 dark:text-zinc-100 transition-transform duration-300 group-hover:scale-125 group-hover:rotate-12" />
                        </BentoBox>
                    </a>
                    <span class="absolute -bottom-5 left-0 right-0 text-center text-xs font-medium text-zinc-600 dark:text-zinc-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">X</span>
                </div>

                <!-- GitHub Box -->
                <div class="group relative">
                    <a href="https://github.com/joeattardi" title="GitHub" class="block">
                        <BentoBox variant="tech" class="bg-purple-50 dark:bg-zinc-900 p-3 border-purple-200 dark:border-purple-900 hover:border-purple-400 dark:hover:border-purple-600 transition-all flex items-center justify-center h-full hover:bg-purple-100 dark:hover:bg-zinc-800">
                            <Icon name="fa7-brands:github" class="w-8 h-8 md:w-10 md:h-10 text-purple-600 dark:text-purple-400 transition-transform duration-300 group-hover:scale-125 group-hover:rotate-12" />
                        </BentoBox>
                    </a>
                    <span class="absolute -bottom-5 left-0 right-0 text-center text-xs font-medium text-purple-600 dark:text-purple-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">GitHub</span>
                </div>

                <!-- LinkedIn Box -->
                <div class="group relative">
                    <a href="https://linkedin.com/in/joeattardi" title="LinkedIn" class="block">
                        <BentoBox variant="tech" class="bg-cyan-50 dark:bg-zinc-900 p-3 border-cyan-200 dark:border-cyan-900 hover:border-cyan-400 dark:hover:border-cyan-600 transition-all flex items-center justify-center h-full hover:bg-cyan-100 dark:hover:bg-zinc-800">
                            <Icon name="fa7-brands:linkedin" class="w-8 h-8 md:w-10 md:h-10 text-cyan-600 dark:text-cyan-400 transition-transform duration-300 group-hover:scale-125 group-hover:-rotate-12" />
                        </BentoBox>
                    </a>
                    <span class="absolute -bottom-5 left-0 right-0 text-center text-xs font-medium text-cyan-600 dark:text-cyan-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">LinkedIn</span>
                </div>
            </div>
        </BentoBox>
    </div>
</Layout>
