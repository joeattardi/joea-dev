---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import Layout from '../layouts/Layout.astro';
import Link from '../components/Link.astro';
import BentoBox from '../components/BentoBox.astro';
import photo from '../assets/joe.jpeg';
import modernCssCover from '../assets/books/modern-css.jpg';
import { getAllPosts } from '../lib/client';

const data = await getAllPosts();
const latestPost = data.publication.posts.edges[0]?.node;

const publishedDate = latestPost ? new Date(latestPost.publishedAt).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
}) : '';

---

<Layout>
    <!-- Background Pattern & Decorative Elements -->
    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
        <!-- Dot pattern -->
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,rgba(0,0,0,0.07)_1px,transparent_0)] dark:bg-[radial-gradient(circle_at_1px_1px,rgba(255,255,255,0.05)_1px,transparent_0)] bg-size-[24px_24px]"></div>

        <!-- Floating gradient blobs -->
        <div class="absolute top-20 -left-32 w-96 h-96 bg-linear-to-br from-blue-400/20 to-purple-500/20 dark:from-blue-500/10 dark:to-purple-600/10 rounded-full blur-3xl animate-[float_12s_ease-in-out_infinite]"></div>
        <div class="absolute top-1/2 -right-32 w-80 h-80 bg-linear-to-br from-pink-400/20 to-orange-400/20 dark:from-pink-500/10 dark:to-orange-500/10 rounded-full blur-3xl animate-[float-delayed_15s_ease-in-out_infinite]"></div>
        <div class="absolute -bottom-20 left-1/3 w-72 h-72 bg-linear-to-br from-cyan-400/15 to-blue-400/15 dark:from-cyan-500/10 dark:to-blue-500/10 rounded-full blur-3xl animate-[float_18s_ease-in-out_infinite]"></div>
    </div>

    <!-- Bento Grid Container -->
    <div class="relative grid grid-cols-2 md:grid-cols-6 auto-rows-[minmax(80px,auto)] md:auto-rows-[minmax(100px,auto)] gap-3 md:gap-4 w-full">
        <!-- Main Hero Box -->
        <BentoBox variant="hero" animationDelay={0} class="col-span-2! md:col-span-4! row-span-2! bg-linear-to-br from-blue-500 via-purple-500 to-pink-500 dark:from-blue-600 dark:via-purple-600 dark:to-pink-600 bg-size-[200%_200%] animate-[gradient-shift_8s_ease-in-out_infinite] text-white p-8 md:p-12 overflow-hidden relative">
            <h1 class="text-4xl md:text-6xl font-bold font-serif mb-4">
                Joe Attardi
            </h1>
            <h2 class="text-xl md:text-2xl mb-4 opacity-90">
                Software Engineer | Author
            </h2>
            <p class="text-lg opacity-90 max-w-xl">
                Building beautiful and functional web applications for over 20 years.
                Passionate about front-end development and modern JavaScript frameworks.
            </p>
        </BentoBox>

        <!-- Photo Box -->
        <BentoBox variant="photo" animationDelay={100} class="col-span-2! md:col-span-2! row-span-2! bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm p-6 flex items-center justify-center">
            <div class="relative">
                <div class="absolute -inset-4 bg-linear-to-r from-blue-500 via-purple-500 to-pink-500 rounded-full blur-2xl animate-[glow-pulse_4s_ease-in-out_infinite]"></div>
                <Image
                    src={photo}
                    alt="Photo of Joe Attardi"
                    class="relative w-48 h-48 md:w-56 md:h-56 rounded-full border-4 border-white dark:border-zinc-700 shadow-2xl"
                />
            </div>
        </BentoBox>

        <!-- Book Announcement Box -->
        <BentoBox variant="cta" animationDelay={150} class="col-span-2! md:col-span-6! bg-linear-to-r from-indigo-600 via-purple-600 to-pink-600 dark:from-indigo-700 dark:via-purple-700 dark:to-pink-700 text-white overflow-hidden relative">
            <div class="absolute -right-20 -top-20 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
            <div class="absolute -left-10 -bottom-10 w-48 h-48 bg-white/10 rounded-full blur-3xl"></div>
            <div class="relative flex items-center">
                <!-- Book Cover - Full Height, Rotated & Cropped -->
                <div class="hidden sm:block relative w-36 md:w-44 shrink-0 self-stretch overflow-visible">
                    <div class="absolute left-0 md:-left-2 top-1/2 -translate-y-1/2 w-32 md:w-40 -rotate-12 shadow-2xl rounded-lg overflow-hidden ring-2 ring-white/30">
                        <Image
                            src={modernCssCover}
                            alt="Modern CSS Second Edition book cover"
                            class="w-full h-auto"
                        />
                    </div>
                </div>
                <!-- Text Content -->
                <div class="flex-1 min-w-0 py-4 md:py-6 pl-4 sm:pl-0 pr-4">
                    <p class="text-xs font-medium text-white/80 uppercase tracking-wide mb-0.5">New Release</p>
                    <h2 class="text-lg md:text-xl font-bold font-serif truncate">Modern CSS Second Edition</h2>
                    <p class="text-xs md:text-sm text-white/90 mt-1 line-clamp-1">Now available with updated techniques and new chapters!</p>
                </div>
                <!-- CTA Button -->
                <a href="https://moderncss.cc" target="_blank" rel="noopener noreferrer" class="shrink-0 inline-flex items-center justify-center gap-2 px-4 md:px-6 py-2 md:py-3 mr-4 md:mr-6 bg-white hover:bg-white/90 text-purple-700 font-semibold rounded-xl transition-all hover:scale-105 shadow-lg text-sm md:text-base">
                    <span class="hidden xs:inline">Get the Book</span>
                    <span class="xs:hidden">View</span>
                    <Icon name="ph:arrow-right-bold" class="w-4 h-4 md:w-5 md:h-5" />
                </a>
            </div>
        </BentoBox>

        <!-- About Box -->
        <BentoBox variant="about" animationDelay={200} class="col-span-2! md:col-span-4! row-span-1! bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm p-6 md:p-8">
            <h2 class="text-2xl md:text-3xl font-bold font-serif mb-4">About Me</h2>
            <p class="text-base text-zinc-700 dark:text-zinc-300 mb-3">
                For more than 20 years, I've had a passion for building
                beautiful and functional web applications. I specialize in front-end development
                with a focus on modern JavaScript frameworks.
            </p>
            <p class="text-base text-zinc-700 dark:text-zinc-300">
                I've also written books about <Link href="https://moderncss.cc">CSS</Link> and <Link href="https://webapis.info">the modern web platform</Link>.
            </p>
        </BentoBox>

        <!-- Location Box -->
        <BentoBox variant="cta" animationDelay={250} class="col-span-2! md:col-span-2! row-span-1! overflow-hidden relative">
            <div id="location-box" class="absolute inset-0 p-6 flex flex-col">
                <!-- Dynamic sky gradient background -->
                <div id="sky-gradient" class="absolute inset-0 bg-linear-to-b from-sky-400 to-sky-300 transition-all duration-1000"></div>
                <!-- Ambient glow -->
                <div id="sky-glow" class="absolute -right-8 -bottom-8 w-32 h-32 rounded-full blur-2xl bg-sky-200/50 transition-all duration-1000"></div>

                <div class="relative flex items-center gap-4">
                    <div class="shrink-0 w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
                        <Icon name="ph:map-pin-fill" class="w-6 h-6 text-white" />
                    </div>
                    <div class="relative">
                        <p class="text-sm text-white/80 font-medium mb-1">Based in</p>
                        <p class="text-xl font-bold text-white">Boston, MA</p>
                        <p class="text-sm text-white/70 mt-1" id="local-time"></p>
                    </div>
                </div>

                <!-- Sun/Moon icon -->
                <div id="celestial-body" class="absolute top-4 right-4 transition-all duration-1000">
                    <Icon name="ph:sun-fill" id="sun-icon" class="w-8 h-8 text-yellow-300 drop-shadow-[0_0_8px_rgba(253,224,71,0.6)] hidden" />
                    <Icon name="ph:moon-fill" id="moon-icon" class="w-8 h-8 text-slate-200 drop-shadow-[0_0_8px_rgba(226,232,240,0.6)] hidden" />
                </div>

                <img src="/boston-skyline.svg" alt="Boston skyline" class="absolute -bottom-4 right-0 md:right-auto md:left-1/2 md:-translate-x-1/2 h-24 opacity-50" id="skyline" />
            </div>
        </BentoBox>

        <!-- Tech Stack Container -->
        <BentoBox variant="contact" animationDelay={300} class="col-span-2! md:col-span-2! bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm p-6">
            <h2 class="text-xl md:text-2xl font-bold font-serif mb-4 xs:text-center lg:text-left">Tech Stack</h2>
            <div class="grid grid-cols-2 xs:grid-cols-4 gap-3 justify-items-center xs:justify-items-stretch max-w-[136px] xs:max-w-xs md:max-w-none mx-auto md:mx-0">
                <!-- JavaScript -->
                <div class="group aspect-square w-12 xs:w-full! rounded-xl bg-yellow-50 dark:bg-zinc-800 border border-yellow-200 dark:border-zinc-700 hover:border-yellow-400 dark:hover:border-yellow-600 hover:bg-yellow-100 dark:hover:bg-zinc-700 transition-all flex items-center justify-center" title="JavaScript">
                    <Icon name="simple-icons:javascript" class="size-8 md:size-6 lg:size-8 text-yellow-500 transition-transform duration-300 group-hover:scale-110" />
                </div>
                <!-- TypeScript -->
                <div class="group aspect-square w-12 xs:w-full! rounded-xl bg-blue-50 dark:bg-zinc-800 border border-blue-200 dark:border-blue-900 hover:border-blue-400 dark:hover:border-blue-600 hover:bg-blue-100 dark:hover:bg-zinc-700 transition-all flex items-center justify-center" title="TypeScript">
                    <Icon name="simple-icons:typescript" class="size-8 md:size-6 lg:size-8 text-blue-600 transition-transform duration-300 group-hover:scale-110" />
                </div>
                <!-- React -->
                <div class="group aspect-square w-12 xs:w-full! rounded-xl bg-cyan-50 dark:bg-zinc-800 border border-cyan-200 dark:border-cyan-900 hover:border-cyan-400 dark:hover:border-cyan-600 hover:bg-cyan-100 dark:hover:bg-zinc-700 transition-all flex items-center justify-center" title="React">
                    <Icon name="simple-icons:react" class="size-8 md:size-6 lg:size-8 text-cyan-500 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-180" />
                </div>
                <!-- Node.js -->
                <div class="group aspect-square w-12 xs:w-full! rounded-xl bg-green-50 dark:bg-zinc-800 border border-green-200 dark:border-green-900 hover:border-green-400 dark:hover:border-green-600 hover:bg-green-100 dark:hover:bg-zinc-700 transition-all flex items-center justify-center" title="Node.js">
                    <Icon name="simple-icons:nodedotjs" class="size-8 md:size-6 lg:size-8 text-green-600 transition-transform duration-300 group-hover:scale-110" />
                </div>
                <!-- HTML -->
                <div class="group aspect-square w-12 xs:w-full! rounded-xl bg-orange-50 dark:bg-zinc-800 border border-orange-200 dark:border-orange-900 hover:border-orange-400 dark:hover:border-orange-600 hover:bg-orange-100 dark:hover:bg-zinc-700 transition-all flex items-center justify-center" title="HTML">
                    <Icon name="simple-icons:html5" class="size-8 md:size-6 lg:size-8 text-orange-500 transition-transform duration-300 group-hover:scale-110" />
                </div>
                <!-- CSS -->
                <div class="group aspect-square w-12 xs:w-full! rounded-xl bg-purple-50 dark:bg-zinc-800 border border-purple-200 dark:border-purple-900 hover:border-purple-400 dark:hover:border-purple-600 hover:bg-purple-100 dark:hover:bg-zinc-700 transition-all flex items-center justify-center" title="CSS">
                    <Icon name="fa7-brands:css" class="size-8 md:size-6 lg:size-8 text-[rebeccapurple] transition-transform duration-300 group-hover:scale-110" />
                </div>
                <!-- Tailwind CSS -->
                <div class="group aspect-square w-12 xs:w-full! rounded-xl bg-sky-50 dark:bg-zinc-800 border border-sky-200 dark:border-sky-900 hover:border-sky-400 dark:hover:border-sky-600 hover:bg-sky-100 dark:hover:bg-zinc-700 transition-all flex items-center justify-center" title="Tailwind CSS">
                    <Icon name="simple-icons:tailwindcss" class="size-8 md:size-6 lg:size-8 text-sky-500 transition-transform duration-300 group-hover:scale-110" />
                </div>
                <!-- Java -->
                <div class="group aspect-square w-12 xs:w-full! rounded-xl bg-red-50 dark:bg-zinc-800 border border-red-200 dark:border-red-900 hover:border-red-400 dark:hover:border-red-600 hover:bg-red-100 dark:hover:bg-zinc-700 transition-all flex items-center justify-center" title="Java">
                    <Icon name="ri:java-fill" class="size-8 md:size-6 lg:size-8 text-red-500 transition-transform duration-300 group-hover:scale-110" />
                </div>
            </div>
        </BentoBox>

        <!-- Latest Blog Post Box -->
        {latestPost && (
            <BentoBox variant="contact" animationDelay={400} class="col-span-2! md:col-span-4! bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm overflow-hidden">
                <a href={`/blog/${latestPost.slug}`} class="block h-full hover:opacity-90 transition-opacity">
                    <div class="relative">
                        <img
                            src={latestPost.coverImage.url}
                            alt={latestPost.title}
                            class="w-full h-40 md:h-48 object-cover"
                        />
                        <div class="absolute top-0 left-0 right-0 p-6 bg-linear-to-b from-black/70 to-transparent">
                            <h2 class="text-2xl md:text-3xl font-bold font-serif text-white drop-shadow-lg">From the Blog</h2>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-lg md:text-xl font-bold font-serif mb-2 line-clamp-2">{latestPost.title}</h3>
                        <p class="text-sm text-zinc-600 dark:text-zinc-400 line-clamp-2 mb-3">{latestPost.brief}</p>
                        <time class="text-xs text-zinc-500 dark:text-zinc-500" datetime={latestPost.publishedAt}>
                            {publishedDate}
                        </time>
                    </div>
                </a>
            </BentoBox>
        )}

        <!-- Featured Project Box -->
        <BentoBox variant="contact" animationDelay={500} class="col-span-2! md:col-span-4! bg-linear-to-br from-amber-50 to-orange-50 dark:from-amber-950/30 dark:to-orange-950/30 backdrop-blur-sm p-6 md:p-8 overflow-hidden relative">
            <div class="absolute -right-16 -top-16 w-48 h-48 bg-amber-200/30 dark:bg-amber-700/20 rounded-full blur-3xl"></div>
            <div class="relative">
                <div class="flex items-center gap-2 mb-3">
                    <span class="px-2 py-1 text-xs font-semibold bg-amber-200 dark:bg-amber-800 text-amber-800 dark:text-amber-200 rounded-full">Featured Project</span>
                    <span class="px-2 py-1 text-xs font-medium bg-zinc-200 dark:bg-zinc-700 text-zinc-600 dark:text-zinc-300 rounded-full">Manning liveProject</span>
                </div>
                <h2 class="text-2xl md:text-3xl font-bold font-serif mb-3">Building an AI Voice Assistant</h2>
                <p class="text-base text-zinc-700 dark:text-zinc-300 mb-4">
                    Build EchoBuddy, an AI-powered voice assistant using SvelteKit, OpenAI's GPT, and the Web Speech API. Learn to create weather widgets, entertainment guides, and news & stock features.
                </p>
                <a href="https://www.manning.com/liveprojectseries/building-an-ai-voice-assistant" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 bg-amber-500 hover:bg-amber-600 dark:bg-amber-600 dark:hover:bg-amber-500 text-white font-medium rounded-lg transition-colors">
                    <Icon name="ph:arrow-square-out" class="w-4 h-4" />
                    View on Manning
                </a>
            </div>
        </BentoBox>

        <!-- Contact Box -->
        <BentoBox variant="contact" animationDelay={600} class="col-span-2! md:col-span-2! bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm p-6 md:p-8">
            <h2 class="text-2xl md:text-3xl font-bold font-serif mb-4">Let's Connect</h2>
            <p class="text-base text-zinc-700 dark:text-zinc-300 mb-6">
                I'd love to hear from you! Whether you have a question, want to collaborate, or just want to say hi.
            </p>
            <div class="flex flex-wrap gap-3">
                <!-- Email -->
                <a href="mailto:jattardi@gmail.com" title="Email" class="group w-12 h-12 rounded-lg bg-blue-50 dark:bg-zinc-800 border border-blue-200 dark:border-blue-900 hover:border-blue-400 dark:hover:border-blue-600 hover:bg-blue-100 dark:hover:bg-zinc-700 transition-all flex items-center justify-center">
                    <Icon name="ph:envelope" class="w-6 h-6 text-blue-600 dark:text-blue-400 transition-transform duration-300 group-hover:scale-110" />
                </a>
                <!-- X -->
                <a href="https://x.com/joeattardi" title="X" class="group w-12 h-12 rounded-lg bg-zinc-50 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 hover:border-zinc-400 dark:hover:border-zinc-500 hover:bg-zinc-100 dark:hover:bg-zinc-700 transition-all flex items-center justify-center">
                    <Icon name="fa7-brands:x-twitter" class="w-6 h-6 text-zinc-800 dark:text-zinc-100 transition-transform duration-300 group-hover:scale-110" />
                </a>
                <!-- GitHub -->
                <a href="https://github.com/joeattardi" title="GitHub" class="group w-12 h-12 rounded-lg bg-purple-50 dark:bg-zinc-800 border border-purple-200 dark:border-purple-900 hover:border-purple-400 dark:hover:border-purple-600 hover:bg-purple-100 dark:hover:bg-zinc-700 transition-all flex items-center justify-center">
                    <Icon name="fa7-brands:github" class="w-6 h-6 text-purple-600 dark:text-purple-400 transition-transform duration-300 group-hover:scale-110" />
                </a>
                <!-- LinkedIn -->
                <a href="https://linkedin.com/in/joeattardi" title="LinkedIn" class="group w-12 h-12 rounded-lg bg-cyan-50 dark:bg-zinc-800 border border-cyan-200 dark:border-cyan-900 hover:border-cyan-400 dark:hover:border-cyan-600 hover:bg-cyan-100 dark:hover:bg-zinc-700 transition-all flex items-center justify-center">
                    <Icon name="fa7-brands:linkedin" class="w-6 h-6 text-cyan-600 dark:text-cyan-400 transition-transform duration-300 group-hover:scale-110" />
                </a>
            </div>
        </BentoBox>
    </div>

    <script>
        function updateLocationBox() {
            const timeEl = document.getElementById('local-time');
            const skyGradient = document.getElementById('sky-gradient');
            const skyGlow = document.getElementById('sky-glow');
            const sunIcon = document.getElementById('sun-icon');
            const moonIcon = document.getElementById('moon-icon');
            const skyline = document.getElementById('skyline');

            if (!timeEl || !skyGradient || !sunIcon || !moonIcon) return;

            const now = new Date();

            const time = now.toLocaleTimeString('en-US', {
                timeZone: 'America/New_York',
                hour: 'numeric',
                minute: '2-digit',
                hour12: true
            });
            timeEl.textContent = `${time} local time`;

            // Get the hour in Boston (Eastern Time)
            const bostonHour = parseInt(now.toLocaleTimeString('en-US', {
                timeZone: 'America/New_York',
                hour: 'numeric',
                hour12: false
            }));

            // Determine time of day and set appropriate styles
            // Dawn: 5-7, Day: 7-17, Dusk: 17-20, Night: 20-5
            let showSun = false;

            if (bostonHour >= 5 && bostonHour < 7) {
                // Dawn - warm oranges and pinks
                skyGradient.style.background = 'linear-gradient(to bottom, #fda4af, #fb923c, #fcd34d)';
                if (skyGlow) skyGlow.style.background = 'rgba(251, 146, 60, 0.4)';
                showSun = true;
            } else if (bostonHour >= 7 && bostonHour < 17) {
                // Day - bright blue sky
                skyGradient.style.background = 'linear-gradient(to bottom, #38bdf8, #7dd3fc)';
                if (skyGlow) skyGlow.style.background = 'rgba(125, 211, 252, 0.4)';
                showSun = true;
            } else if (bostonHour >= 17 && bostonHour < 20) {
                // Dusk - purple and orange sunset
                skyGradient.style.background = 'linear-gradient(to bottom, #a855f7, #f97316, #fbbf24)';
                if (skyGlow) skyGlow.style.background = 'rgba(249, 115, 22, 0.4)';
                showSun = true;
            } else {
                // Night - dark blue with stars effect
                skyGradient.style.background = 'linear-gradient(to bottom, #1e1b4b, #312e81, #3730a3)';
                if (skyGlow) skyGlow.style.background = 'rgba(99, 102, 241, 0.3)';
                showSun = false;
            }

            // Toggle sun/moon visibility
            if (showSun) {
                sunIcon.classList.remove('hidden');
                moonIcon.classList.add('hidden');
            } else {
                sunIcon.classList.add('hidden');
                moonIcon.classList.remove('hidden');
            }

            // Make skyline darker at night for better contrast
            if (skyline) {
                skyline.style.opacity = showSun ? '0.5' : '0.3';
            }
        }

        updateLocationBox();
        setInterval(updateLocationBox, 60000);
    </script>
</Layout>
