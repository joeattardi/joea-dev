---
import { Image } from 'astro:assets';
import SocialIconLink from '../components/SocialIconLink.astro';
import Layout from '../layouts/Layout.astro';
import Link from '../components/Link.astro';
import photo from '../assets/joe.jpeg';
---

<Layout>
    <div class="grid grid-cols-1 md:grid-cols-[1fr_256px] gap-8 md:m-8 justify-items-center items-center bg-slate-100 py-8 px-4 md:p-8 rounded-lg border border-slate-300 dark:bg-zinc-900 dark:border-zinc-600">
        <div class="text-center md:text-left flex flex-col gap-2">
            <h1 class="text-4xl font-bold font-serif">Joe Attardi</h1>
            <h2 class="text-xl">Software Engineer | Author</h2>
            <p class="text-lg">
                For more than 20 years, I've had a passion for building
                beautiful and functional web applications. I specialize in front-end development
                with a focus on modern JavaScript frameworks.
            </p>
            <p class="text-lg">
                I've also written books about <Link href="https://moderncss.cc">CSS</Link> and <Link href="https://webapis.info">the modern web platform</Link>.
            </p>
            <div class="grid grid-cols-[min-content_min-content_min-content_min-content] gap-4 justify-center md:justify-start mt-4">
                <SocialIconLink title="Email" href="mailto:jattardi@gmail.com" icon="ph:envelope" />
                <SocialIconLink title="X" href="https://x.com/joeattardi" icon="fa7-brands:x-twitter" />
                <SocialIconLink title="GitHub" href="https://github.com/joeattardi" icon="fa7-brands:github" />
                <SocialIconLink title="LinkedIn" href="https://linkedin.com/in/joeattardi" icon="fa7-brands:linkedin" />
            </div>
        </div>
        <div class="row-1 md:row-auto">
            <Image
                src={photo}
                alt="Photo of Joe Attardi"
                class="w-32 h-32 md:w-48 md:h-48 rounded-full border-8 border-zinc-300 dark:border-zinc-600"
            />
        </div>
    </div>
</Layout>
